<!--blog start-->
<section class="section-gap">
  <div class="container">
    <div class="row justify-content-between">

      {{>sidebar}}

      <div class="col-lg-8">
        {{#each posts}}
          <div class="blog-post">
            <a href="#"><img
                class="rounded mb-lg-5 mb-4"
                src="/static/upload/thumbnails/{{this.thumbnail}}"
                alt="card image"
              /></a>
            <h3><a href="/p/{{this.slug}}">{{this.title}}</a></h3>
            <div class="meta font-lora my-4">
              <a href="#">{{this.full_name}}</a>
              <span class="meta-separator"></span>
              <a href="#">{{this.jalali_date}}</a>
            </div>
            <p>{{this.excerpt}}</p>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>
