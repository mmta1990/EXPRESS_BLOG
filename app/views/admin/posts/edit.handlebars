<!-- Page Headings Start -->
<div class="row justify-content-between align-items-center mb-10">
  <!-- Page Heading Start -->
  <div class="col-12 col-lg-auto mb-20">
    <div class="page-heading">
      <h3 class="title">مطالب <span>/ویرایش مطلب </span></h3>
    </div>
  </div>
  <!-- Page Heading End -->

  <!-- Page Button Group End -->
</div>
<!-- Page Headings End -->

<div class="row mbn-30">
  <!-- Revenue Statistics Chart Start -->
  <div class="col-md-12 mb-30">
    <div class="box">
      <div class="box-head">
        <div class="row">
          <h4 class="title">اطلاعات مطلب</h4>
        </div>
      </div>
      <div class="box-body">
        <form action="/admin/posts/update/{{post.id}}" method="POST">
          <div class="row mbn-20">
            <div class="col-12 mb-20">
              {{#if hasError}}
                <div class="alert alert-outline-danger" role="alert">
                  {{#each errors}}
                    <p>{{this}}</p>
                  {{/each}}
                </div>
              {{/if}}
            </div>
            <div class="col-12 mb-20">
              <input
                name="title"
                type="text"
                id="formLayoutUsername3"
                class="form-control"
                value="{{post.title}}"
                placeholder="عنوان مطلب"
              />
            </div>
            <div class="col-12 mb-20">
              <input
                name="slug"
                type="email"
                id="formLayoutEmail3"
                class="form-control"
                value="{{post.slug}}"
                placeholder="نامک مطلب"
              />
            </div>
            <div class="col-12 mb-20">
              <textarea
                name="content"
                id="formLayoutMessage1"
                class="form-control"
                placeholder="محتوای مطلب"
              >{{post.content}}</textarea>
            </div>

            <div class="col-12 mb-15">
              <select
                name="author"
                class="form-control"
                placeholder="نام نویسنده"
              >
                {{#each users}}
                  <option value="{{this.id}}">{{this.full_name}}</option>
                {{/each}}
              </select>
            </div>

            <div class="col-12 mb-20">
              <h6 class="mb-15">وضعیت مطلب</h6>
              <div class="form-group">
                <label class="inline"><input
                    name="status"
                    type="radio"
                    value="0"
                  />پیش نویس</label>
                <label class="inline"><input
                    name="status"
                    type="radio"
                    value="2"
                  />منتشرشده</label>
                <label class="inline"><input
                    name="status"
                    type="radio"
                    value="1"
                    checked
                  />در حال بازبینی</label>
              </div>
            </div>

            <div class="col-12 mb-20">
              <button
                type="submit"
                value="ذخیره سازی"
                class="button button-primary"
              >
                <span>ذخیره سازی</span>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- Revenue Statistics Chart End -->
</div>